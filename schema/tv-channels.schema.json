{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-z0-9_-]+$": {
      "type": "object",
      "required": ["nombre", "señales", "país"],
      "properties": {
        "nombre": {"type": "string"},
        "logo": {"type": "string"},
        "señales": {
          "type": "object",
          "properties": {
            "iframe_url": {"type": "array", "items": {"type": "string"}},
            "m3u8_url": {"type": "array", "items": {"type": "string"}},
            "yt_id": {"type": "string"},
            "yt_embed": {"type": "string"},
            "yt_playlist": {"type": "string"},
            "twitch_id": {"type": "string"}
          },
          "additionalProperties": false
        },
        "sitio_oficial": {"type": "string"},
        "categoría": {"type": "string"},
        "país": {"type": "string", "minLength": 2, "maxLength": 3}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
